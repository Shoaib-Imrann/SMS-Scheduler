{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "dist/**"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/cron/handleScheduledCampaigns",
        "dest": "server.js"
      },
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ],
    "cron": [
      {
        "path": "/api/cron/handleScheduledCampaigns",
        "schedule": "*/5 * * * *"
      }
    ]
  }
  